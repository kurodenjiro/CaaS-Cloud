<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='/stylesheets/dashboard.css' />

<style>
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th, td {
    padding: 5px;
    text-align: left;    
}
</style>
</head>
<body>

<div class="navbar">
  <a href="/reservepage">Create Reservation</a>
  <a href="/myreservationspage">My Reservations</a>
  <a href="/billing">My Billing Dashboard</a>
  <a href="/logout">Logout</a>
</div>
<table style="width:100%">
  <tr>
    <th>Image</th>
    <th>Start Time</th> 
    <th>End Time</th>
    <th>Cores</th>
    <th>Amount</th>
  </tr>
{{#each Allbill as |bill|}}
  <tr>
    <td>{{bill.image}}</td>
    <td>{{bill.starttime}}</td> 
    <td>{{bill.endtime}}</td>
    <td>{{bill.cores}}</td>
    <td>${{bill.amount}}</td>
  </tr>
{{/each}}
</table>
  <br>
  <br>

<p><b> Total : ${{Total}}</b></p>


</body>
</html>
